{
  "name": "youtube-grid-styler",
  "version": "2.3.0",
  "description": "Uma extensão multi-browser para personalizar o YouTube com controlo de grelha e filtros de conteúdo.",
  "main": "index.js",
  "scripts": {
    "build:chrome": "webpack --env browser=chrome --mode=production",
    "build:firefox": "webpack --env browser=firefox --mode=production",
    "build": "npm run build:chrome && npm run build:firefox",
    "dev:chrome": "webpack --env browser=chrome --mode=development --watch",
    "dev:firefox": "webpack --env browser=firefox --mode=development --watch"
  },
  "keywords": [
    "chrome-extension",
    "firefox-addon",
    "youtube",
    "grid",
    "customization"
  ],
  "author": "Leandro Gazoli",
  "license": "MIT",
  "devDependencies": {
    "copy-webpack-plugin": "^13.0.0",
    "webextension-polyfill": "^0.12.0",
    "webpack": "^5.99.9",
    "webpack-cli": "^6.0.1",
    "zip-webpack-plugin": "^4.0.3"
  }
}